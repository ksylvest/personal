<div class="flex flex-1 w-0 justify-end">
  <%- if current_page.last? -%>
    <span class="p-4 pr-0 text-slate-600">
      <%= raw(t("views.pagination.next")) %>
    </span>
  <%- else -%>
    <%= link_to(raw(t("views.pagination.next")), url,
      class: "p-4 pr-0",
      rel: "next",
      remote: remote
    ) %>
  <%- end %>
</div>
