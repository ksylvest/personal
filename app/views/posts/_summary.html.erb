<%- cache post do -%>
  <article>
    <h3 class="mb-2">
      <%= link_to(post.title, post_path(segment: post.segment, slug: post.slug)) %>
    </h3>

    <p class="my-2">
      <%= time_tag(post.date, l(post.date, format: :human), class: "text-slate-400") %>
    </p>

    <div class="my-2">
      <%= render "posts/tags", tags: post.tags %>
    </div>

    <p class="mt-2">
      <%= post.summary %>
    </p>
  </article>
<%- end -%>
