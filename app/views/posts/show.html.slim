- provide :title, @post.title
- provide :description, @post.summary
- provide :keywords, @post.keywords
- provide :head

- cache @post do

  .post.details
    header.header
      h1.title= @post.title
      p.time= time_tag(@post.date, l(@post.date, format: :human))
      = render 'posts/tags', tags: @post.tags
    section.body
      = markdown @post.body

  = render 'shared/disqus'
