<%- provide :title, "Admin » Attachments" -%>

<nav class="crumbs">
  <%= link_to 'Admin', admin_path %> » Attachments
</nav>

<ul class="grid">
  <%- @attachments.each do |attachment| -%>
    <li class="grid__entry">
      <span class="grid__icon">
        <%= tag.i class: attachment.icon %>
      </span>
      <span class="grid__title"><%= attachment.name %></span>
      <span class="grid__options">
        <%= link_to 'Edit', edit_admin_attachment_path(attachment), class: 'button edit' %>
        <%= link_to 'Destroy', admin_attachment_path(attachment), method: :delete, class: 'button destroy', data: { confirm: "Are you sure?" } %>
      </span>
    </li>
  <%- end -%>
</ul>

<%= paginate @attachments %>

<div class="actions">
  <%= link_to 'New', new_admin_attachment_path, class: 'button' %>
</div>
