<%- provide :title, "Admin Â» Posts" -%>

<nav class="breadcrumb">
  <%= link_to "Admin", admin_path %>
  <span>/</span>
  <span>Posts</span>
</nav>

<div class="my-4 text-right">
  <%= link_to "New", new_admin_post_path, class: "button" %>
</div>

<table class="max-w-full min-w-full">
  <tbody class="divide-y divide-gray-200">
    <%- @posts.each do |post| -%>
      <tr>
        <td class="py-4">
          <%= truncate post.title, length: 40 %>
        </td>
        <td class="py-4">
          <div class="flex justify-end gap-4">
            <%= link_to "Show", post_path(segment: post.segment, slug: post.slug) %>
            <%= link_to "Edit", edit_admin_post_path(post) %>
            <%= link_to "Destroy", admin_post_path(post), method: :delete, data: { confirm: "Are you sure?" } %>
          </div>
        </td>
      </tr>
    <%- end -%>
  </tbody>
</table>

<%= paginate @posts %>
