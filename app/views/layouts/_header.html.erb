<header>
  <div class="mb-4 flex items-center justify-center">
    <%= link_to root_path do %>
      <picture>
        <source type="image/webp" srcset="<%= srcset("avatar/default", sizes: %w[100w 200w 300w 400w 500w 600w], format: "webp") %>">
        <source type="image/jpeg" srcset="<%= srcset("avatar/default", sizes: %w[100w 200w 300w 400w 500w 600w], format: "jpg") %>">
        <%= image_tag image_path("avatar/default.jpg"), alt: "Kevin Sylvestre", class: "block rounded-2xl w-48 h-48" %>
      </picture>
    <% end %>
  </div>
  <h1 class="my-4 font-black text-4xl text-center text-slate-700">
    Kevin Sylvestre
  </h1>
  <h2 class="my-4 font-semibold text-2xl text-center text-slate-500">
    A Ruby and Swift developer and designer.
  </h2>
  <nav class="mt-4 font-medium text-lg flex flex-wrap items-center justify-center gap-4">
    <%- header_nav.each do |(text,link)| %>
      <%= link_to text, link %>
    <%- end -%>
  </nav>
</header>
