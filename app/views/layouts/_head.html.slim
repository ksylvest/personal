title= "#{yield(:title)} | Kevin Sylvestre"
meta charset="UTF-8"

meta name="description" content=yield(:description)
meta name="keywords" content=yield(:keywords)
meta name="viewport" content=viewport

= favicon_link_tag(asset_pack_url("media/shared/images/favicon.ico"), sizes: "16x16 24x24 32x32 48x48 64x64")

= auto_discovery_link_tag(:atom, feed_index_url(:atom))
= auto_discovery_link_tag(:rss, feed_index_url(:rss))

= csrf_meta_tags

= stylesheet_pack_tag "application", "data-turbolinks-track": "reload", async: "async"
= javascript_pack_tag "application", "data-turbolinks-track": "reload", async: "async"

script type="application/ld+json"
  =raw JSON.generate(ld)

== yield(:head)
