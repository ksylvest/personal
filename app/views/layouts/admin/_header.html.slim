- cache do
  header#header
    .content
      = link_to 'Admin', admin_path, class: "logo #{'active' if active?("admin/dashboard")}"
      - if authenticated?
        nav.navigation.global
          ul
            li= link_to 'Pages', admin_pages_path, class: ('active' if active?("admin/pages"))
            li= link_to 'Posts', admin_posts_path, class: ('active' if active?("admin/posts"))
            li= link_to 'Attachments', admin_attachments_path, class: ('active' if active?("admin/attachments"))
        nav.navigation.account
          ul
            li= link_to 'Account', edit_admin_user_path, class: ('active' if active?("admin/users"))
            li= link_to 'Logout', admin_session_path, method: 'delete'
