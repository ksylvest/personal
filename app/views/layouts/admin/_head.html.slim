title= "#{yield(:title)} | Kevin Sylvestre"
meta charset="UTF-8"

meta name="description" content=yield(:description)
meta name="keywords" content=yield(:keywords)
meta name="viewport" content=viewport

= favicon_link_tag(image_path("favicon.ico"), sizes: "16x16 24x24 32x32 48x48 64x64")

= csrf_meta_tags

javascript:
  RELEASE = #{{JSON.generate(release)}};
  ENVIRONMENT = #{{JSON.generate(Rails.env)}};
  SENTRY_DSN = #{{JSON.generate(Rails.application.credentials.sentry_dsn)}};
  SENTRY_TRACES_SAMPLE_RATE = #{{JSON.generate(SENTRY_TRACES_SAMPLE_RATE)}};

= stylesheet_pack_tag "admin", "data-turbolinks-track": "reload"
= javascript_pack_tag "admin", "data-turbolinks-track": "reload"
